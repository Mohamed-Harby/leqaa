{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/v1/Authentication/{everything}",
      "DownstreamScheme": "http",
      "ServiceName": "Authentication",
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "5002"
        }
      ],
      "UpstreamPathTemplate": "/api/v1/Authentication/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ]
    },
    //for any end point in business
    {
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "http",

      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "5004"
        }
      ],
      "UpstreamPathTemplate": "/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ]
    },
    //for any end point in payment

    {
      "DownstreamPathTemplate": "/api/v1/checkout/{everything}",
      "DownstreamScheme": "http",
      "ServiceName": "checkout",
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "5196"
        }
      ],
      "UpstreamPathTemplate": "/api/v1/checkout/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5001",
    "ServiceDiscoveryProvider": {
      "Type": "Consul",
      "Host": "localhost",
      "Port": 8500,
      "ConfigurationKey": "Ocelot",
      "PollingInterval": 5000
    }
  }
}
