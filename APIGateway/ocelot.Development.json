{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/v1/Authentication/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "5002"
        }
      ],
      "UpstreamPathTemplate": "/api/v1/Authentication/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ]
    },
    //for any end point in business
    {
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "5004"
        }
      ],
      "UpstreamPathTemplate": "/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ]
    },
    //for any end point in payment

    {
      "DownstreamPathTemplate": "/checkout/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "5196"
        }
      ],
      "UpstreamPathTemplate": "/checkout/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "ServiceProvider": {
        "Type": "Consul",
        "Configuration": {
          "Host": "localhost",
          "Port": 8500,
          "PollingInterval": 10000,
          "ServiceName": "myServiceName",
          "UseHttps": false
        }
      }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5001",
    "ServiceProvider": {
      "Type": "Consul",
      "Configuration": {
        "Host": "localhost",
        "Port": 8500,
        "PollingInterval": 10000,
        "ServiceName": "myServiceName",
        "UseHttps": false
      }
    }
  }
}
